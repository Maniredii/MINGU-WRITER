<Window x:Class="MinguApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MINGU - Auto Typer" Height="450" Width="650"
        Background="#F5F5F5">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="MINGU - Auto Typer"
                   FontSize="24"
                   FontWeight="Bold"
                   Foreground="#333"
                   Margin="0,0,0,15" />

        <!-- Text Input Area -->
        <Border Grid.Row="1"
                Background="White"
                BorderBrush="#DDD"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0"
                           Text="Enter or paste your text below:"
                           FontSize="12"
                           Foreground="#666"
                           Margin="0,0,0,5" />

                <TextBox x:Name="InputBox"
                         Grid.Row="1"
                         AcceptsReturn="True"
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         FontSize="14"
                         FontFamily="Segoe UI"
                         BorderThickness="0"
                         Background="Transparent"
                         Padding="5" />
            </Grid>
        </Border>

        <!-- Start Button -->
        <Button x:Name="StartTypingButton"
                Grid.Row="2"
                Margin="0,15,0,10"
                Height="45"
                Content="Start typing into active window"
                Click="StartTypingButton_Click"
                FontSize="16"
                FontWeight="SemiBold"
                Background="#4CAF50"
                Foreground="White"
                BorderThickness="0"
                Cursor="Hand">
            <Button.Style>
                <Style TargetType="Button">
                    <Setter Property="Background" Value="#4CAF50" />
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="5"
                                        Padding="10">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                    VerticalAlignment="Center" />
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#45A049" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="#CCC" />
                            <Setter Property="Foreground" Value="#666" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!-- Status Text -->
        <Border Grid.Row="3"
                Background="#E3F2FD"
                BorderBrush="#2196F3"
                BorderThickness="1"
                CornerRadius="5"
                Padding="10">
            <TextBlock x:Name="StatusText"
                       FontSize="13"
                       Foreground="#1976D2"
                       Text="Ready. Enter your text and click the button to start."
                       TextWrapping="Wrap" />
        </Border>
    </Grid>
</Window>
