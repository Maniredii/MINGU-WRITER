{
    "name": "minguwriter",
    "version": "1.0.0",
    "description": "A cross-platform desktop application for formatting research papers and academic reports",
    "main": "./out/main/index.js",
    "author": "MinguWriter Team",
    "license": "MIT",
    "scripts": {
        "dev": "electron-vite dev",
        "build": "electron-vite build",
        "preview": "electron-vite preview",
        "build:win": "npm run build && electron-builder --win --config",
        "build:mac": "npm run build && electron-builder --mac --config",
        "build:linux": "npm run build && electron-builder --linux --config"
    },
    "dependencies": {
        "@electron-toolkit/preload": "^3.0.0",
        "@electron-toolkit/utils": "^3.0.0",
        "docx": "^8.5.0",
        "file-saver": "^2.0.5",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-quill": "^2.0.0",
        "quill": "^1.3.7"
    },
    "devDependencies": {
        "@electron-toolkit/eslint-config-ts": "^1.0.1",
        "@electron-toolkit/tsconfig": "^1.0.1",
        "@types/file-saver": "^2.0.7",
        "@types/node": "^20.11.5",
        "@types/react": "^18.2.48",
        "@types/react-dom": "^18.2.18",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.17",
        "electron": "^28.2.0",
        "electron-builder": "^24.9.1",
        "electron-vite": "^2.0.0",
        "eslint": "^8.56.0",
        "postcss": "^8.4.33",
        "tailwindcss": "^3.4.1",
        "typescript": "^5.3.3",
        "vite": "^5.0.12"
    },
    "build": {
        "appId": "com.minguwriter.app",
        "productName": "MinguWriter",
        "directories": {
            "output": "dist"
        },
        "files": [
            "out/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "resources/icon.ico"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "resources/icon.icns"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "resources/icon.png",
            "category": "Office"
        }
    }
}